<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center">

    <EditText
        android:id="@+id/et_route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter route's name here"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/bttn_service_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_marginRight="6dp"/>

        <Button
            android:id="@+id/bttn_service_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/bttn_collect_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Collectin"
        android:layout_margin="12dp"/>

    <Button
        android:id="@+id/bttn_view_data_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View data on maps"
        android:layout_margin="12dp"/>

    <Button
        android:id="@+id/bttn_view_data_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View List of data"
        android:layout_margin="12dp"/>



    <Button
        android:id="@+id/bttn_delete_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete the entire database"
        android:layout_marginTop="100dp"
        android:textColor="#FF0000"
        android:textStyle="bold"/>

</LinearLayout>